{
    "title": "spacebar to modifier key",
    "rules": [
        {
            "description": "Change spacebar to fn if pressed with other keys (Post spacebar when pressed alone)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Change spacebar to right_shift if pressed with other keys (Post spacebar when pressed alone)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ]
                }
            ]
        }
    ]
}